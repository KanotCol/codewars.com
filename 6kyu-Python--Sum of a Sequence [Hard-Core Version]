def sequence_sum(begin_number, end_number, step):
    if (begin_number > end_number and step > 0) or (begin_number < end_number and step < 0): return 0
    cantidad = ((end_number - begin_number) // step) + 1
    ultnro = begin_number + (step * (cantidad - 1))
    suma = int((begin_number + ultnro) * cantidad // 2)
    return suma
